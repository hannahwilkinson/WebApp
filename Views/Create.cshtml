<!--define what kind of data we are going to use-->
<!--form-->
@model Book

<div class="col-md-8">
    <form asp-action="Create">

        <!--title of the book-->
        <div class="form-group">
            <!--label that is assocaited with a control-->
            <!--'asp-for' - tag helpers that bind them together-->
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <br />

        <!--description-->
        <div class="form-group">
            <!--label that is assocaited with a control-->
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
        </div>

        <br />

        <!--author-->
        <div class="form-group">
            <!--label that is assocaited with a control-->
            <label asp-for="Author" class="control-label"></label>
            <input asp-for="Author" class="form-control" />
        </div>

        <br />

        <!--date published-->
        <div class="form-group">
            <!--label that is assocaited with a control-->
            <label asp-for="DatePublished" class="control-label"></label>
            <input asp-for="DatePublished" class="form-control" />
        </div>

        <br />

        <!--genre-->
        <div class="form-group">
            <!--label that is assocaited with a control-->
            <label asp-for="Genre" class="control-label"></label>
            <input asp-for="Genre" class="form-control" />
        </div>

        <br />

        <!--price-->
        <div class="form-group">
            <!--label that is assocaited with a control-->
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
        </div>

        <br />

        <!--save button-->
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>

        <!--back to list button-->
        <p>
            <a asp-controller="Book" asp-action="Index">Back to list</a>
        </p>
    </form>
</div>